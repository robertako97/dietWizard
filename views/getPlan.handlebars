<div class="container mt-5">
    <h2 class="text-center mb-4">Your Diet Plan</h2>
    <div class="accordion" id="dailyPlanAccordion">
        {{#each (groupMealsByDay userDiet.meals) as |dayMeals dayIndex|}}
            <h3>Day {{add dayIndex 1}}</h3>
            {{#each dayMeals as |meal mealIndex|}}
                <div class="card">
                    <div class="card-header" id="heading{{dayIndex}}-{{mealIndex}}">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse{{dayIndex}}-{{mealIndex}}" aria-expanded="true" aria-controls="collapse{{dayIndex}}-{{mealIndex}}">
                                Meal {{meal.meal_type}}
                            </button>
                        </h2>
                    </div>
                    <div id="collapse{{dayIndex}}-{{mealIndex}}" class="collapse" aria-labelledby="heading{{dayIndex}}-{{mealIndex}}" data-parent="#dailyPlanAccordion">
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <h4>{{meal.meal_type}}</h4>
                                    <ul class="list-unstyled">
                                        {{#each meal.meals_ingredients}}
                                            <li>{{this.ingredient}} - {{this.quantity}} grams</li>
                                        {{/each}}
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/each}}
    </div>
</div>
