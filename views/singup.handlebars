<link href="./node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
<link rel="stylesheet" href="./style.css">

<body>
    <nav class="navbar  navbar-expand-lg bg-body-tertiary data-bs-theme='dark'">
        <div class="container-fluid">
          <a class="navbar-brand fw-bold" href="#">Diet Wizard</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav --bs-dark-bg-subtle ms-auto">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
              <a class="nav-link" href="#">Login</a>
              <a class="nav-link" href="#">Features</a>
              <a class="nav-link" href="#">Contact Us</a>
            </div>
          </div>
        </div>
    </nav>

    <div class="container">
        <h4 class = "text-center mt-4">Sign Up</h4>
        <div class="center-form">
            <form action="signup.php" method="POST">
                <div class="form-group">
                    <label for="fname" class="form-label mt-4">First name:</label>
                    <input type="text" class="form-control narrow-input" id="fname" name="fname" value="{{firstname}}" required max-width: 300px;>
                </div>
                <div class="form-group">
                    <label for="lname" class="form-label mt-4">Last name:</label>
                    <input type="text" class="form-control narrow-input" id="lname" name="lname" value="{{lastname}}" required>
                </div>
                <div class="form-group">
                    <label for="email" class="form-label mt-4">Email:</label>
                    <input type="text" class="form-control narrow-input" id="email" name="email" value="{{email}}" required>
                    <div class="form-group">
                        <label for="password" class="form-label mt-4">Password:</label>
                        <input type="password" class="form-control narrow-input" id="password" name="password" value="{{password}}" required>
                        <input type="checkbox" id="showPassword"> Show Password
                    </div>
                    <div class="row form-group">
                        <label for="username" class="form-label mt-4">Username:</label>
                        <div class="input-group has-validation">
                            <input type="text" class="input-group has-validation narrow-input" id="username" name="username" value="{{username}}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="birthdate" class="form-label mt-4">Birthdate:</label>
                        <input type="text" class="form-control narrow-input" id="birthdate" name="birthdate" class="datepicker" value="{{birthdate}}"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="gender" class="form-label mt-4">Gender:</label>
                        <select class="form-select narrow-input" id="gender" name="gender" required>
                            <option value>Choose...</option>
                            <option value="male" {{#if isMale}}selected{{/if}}>Male</option>
                            <option value="female" {{#if isFemale}}selected{{/if}}>Female</option>
                        </select>
                    </div>
                    <div class="form-group mt-4">
                        <label for="weight">Weight (kg):</label>
                        <input type="number" id="weight" name="weight" min="1" max="300" value="{{weight}}" required>
                    </div>
                    <div class="form-group mt-4">
                        <label for="height">Height (cm):</label>
                        <input type="number" id="height" name="height" min="1" max="250" value="{{height}}" required>
                    </div>
                    <div class="form-group mt-4">
                        <label for="weightgoal">Weight goal (kg):</label>
                        <input type="number" id="weightgoal" name="weightgoal" min="1" max="300" value="{{weightgoal}}"
                            required>
                    </div>
                    <div class="form-group mt-4">
                        <label for="activitylevel">Activity level:</label><br>
                        <select id="activitylevel" class="narrow-input" name="activitylevel" required>
                            <option value=""></option>
                            <option value="sedentary" {{#if isSedentary}}selected{{/if}}>Mostly sedentary (Little or no exercise)
                            </option>
                            <option value="light" {{#if isLight}}selected{{/if}}>Somewhat sedentary (Light exercise or sports
                                1-3 days a week)</option>
                            <option value="moderate" {{#if isModerate}}selected{{/if}}>Somewhat active(Moderate exercise
                                or sports 3-5 days a week)</option>
                            <option value="active" {{#if isActive}}selected{{/if}}>Moderately active (Hard exercise or sports 6-7
                                days a week)</option>
                            <option value="superactive" {{#if isSuperActive}}selected{{/if}}>Very active (Very hard
                                exercise and physical job)</option>
                        </select>
                    </div>
                    <div class="form-group mt-4">
                        <label for="typeofdiet">Type of diet:</label><br>
                        <select id="typeofdiet" name="typeofdiet" required>
                            <option value=""></option>
                            <option value="lowcarb" {{#if isLowCarb}}selected{{/if}}>Low-carb</option>
                            <option value="mediterranean" {{#if isMediterranen}}selected{{/if}}>Mediterranean</option>
                            <option value="omnivore" {{#if isBetterBody}}selected{{/if}}>Better body</option>
                        </select>  
                    </div>
                    <div class="form-group mt-4">
                        <label for="allergies">Ingredients You're Allergic To:</label><br>
                        <textarea id="allergies" name="allergies" rows="4"></textarea>
                    </div>
                    <div class="button-container mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-2 me-sm-3 fw-bold">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Include jQuery and jQuery UI libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- Initialize the datepicker -->
    <script>
        $(function () {
            const currentYear = new Date().getFullYear();
            $("#birthday").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: '1900:' + currentYear
            });
        });
    </script>
    <script>
    const passwordInput = document.getElementById("password");
    const showPasswordCheckbox = document.getElementById("showPassword");

    showPasswordCheckbox.addEventListener("change", function() {
        if (showPasswordCheckbox.checked) {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    });
</script>
</body>