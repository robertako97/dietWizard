<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up for Diet App</title>
    <link rel="stylesheet" href="/dietWizard/views/style/style.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<body>
    <div class="container">
        <h1>Sign Up</h1>
        <form id="signupForm" method="POST">
            <!-- ... -->
            <div class="form-group">
                <label for="fname">First name</label>
                <input type="text" id="fname" name="fname" value="{{firstname}}" required>
            </div>
            <div class="form-group">
                <label for="lname">Last name</label>
                <input type="text" id="lname" name="lname" value="{{lastname}}" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" value="{{email}}" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="{{password}}" required>
                <input type="checkbox" id="showPassword"> Show Password
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" value="{{username}}" required>
            </div>
            <div class="form-group">
                <label for="birthdate">Age:</label>
                <input type="text" id="birthdate" name="birthdate" value="{{age}}" required>
            </div>
            <div class="form-group">
                <label for="gender">Gender:</label>
                <select id="gender" name="gender" required>
                    <option value=""></option>
                    <option value="male" {{#if isMale}}selected{{/if}}>Male</option>
                    <option value="female" {{#if isFemale}}selected{{/if}}>Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="weight">Weight (kg):</label>
                <input type="number" id="weight" name="weight" min="1" max="300" value="{{weight}}" required>
            </div>
            <div class="form-group">
                <label for="height">Height (cm):</label>
                <input type="number" id="height" name="height" min="1" max="250" value="{{height}}" required>
            </div>
            <div class="form-group">
                <label for="weightgoal">Weight goal (kg):</label>
                <input type="number" id="weightgoal" name="weightgoal" min="1" max="300" value="{{weightgoal}}" required>
            </div>
            <div class="form-group">
                <label for="activitylevel">Activity level:</label>
                <select id="activitylevel" name="activitylevel" required>
                    <option value=""></option>
                    <option value="sedentary" {{#if isSedentary}}selected{{/if}}>Mostly sedentary (Little or no exercise)
                    </option>
                    <option value="light" {{#if isLight}}selected{{/if}}>Somewhat sedentary (Light exercise or sports
                        1-3 days a week)</option>
                    <option value="moderate" {{#if isModerate}}selected{{/if}}>Somewhat active(Moderate exercise
                        or sports 3-5 days a week)</option>
                    <option value="active" {{#if isActive}}selected{{/if}}>Moderately active (Hard exercise or sports 6-7
                        days a week)</option>
                    <option value="superactive" {{#if isSuperActive}}selected{{/if}}>Very active (Very hard
                        exercise and physical job)</option>
                </select>
            </div>
            <div class="form-group">
                <label for="typeofdiet">Type of diet:</label>
                <select id="typeofdiet" name="typeofdiet" required>
                    <option value=""></option>
                    <option value="lowcarb" {{#if isLowCarb}}selected{{/if}}>Low-carb</option>
                    <option value="mediterranean" {{#if isMediterranen}}selected{{/if}}>Mediterranean</option>
                    <option value="omnivore" {{#if isBetterBody}}selected{{/if}}>Better body</option>
                </select>
            </div>
            <div class="form-group">
                <label for="allergies">Ingredients You're Allergic To:</label>
                <textarea id="allergies" name="allergies" rows="4"></textarea>
            </div>
            <div class="button-container">
                <button type="submit" class="btn">Submit</button>
            </div>
            <!-- ... -->

        </form>
    </div>

    <!-- Include jQuery and jQuery UI libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
    const passwordInput = document.getElementById("password");
    const showPasswordCheckbox = document.getElementById("showPassword");

    showPasswordCheckbox.addEventListener("change", function() {
        if (showPasswordCheckbox.checked) {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    });
</script>
</body>



