<div class="container">
    <section class="signup-section">
        <img class="d-block mx-auto mt-4 mb-4" src="/images/wizard1.png" alt="logo" width="80" height="auto">
        <h4 class="text-center mt-4">Sign Up</h4>
        <div class="center-form mx-auto text-center">
            <form class="signup-form" method="POST">

                <div class="form-group">
                    <label for="username" class="form-label mt-4">Username:</label>
                    <div class="input-group has-validation">
                        <input type="text" class="input-group narrow-input" id="username" name="username"
                               required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label mt-4">Email:</label>
                    <input type="text" class="form-control narrow-input" id="email" name="email"
                           required>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label mt-4">Password:</label>
                    <div class="password-container">
                        <input type="password" class="form-control narrow-input" id="password" name="password" required>
                        <input type="checkbox" class="showPassword"> Show Password
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirm-password" class="form-label mt-4">Confirm Password:</label>
                    <div class="password-container">
                        <input type="password" class="form-control narrow-input" id="confirm-password"
                               name="confirm-password" required>
                        <input type="checkbox" class="showPassword"> Show Password
                    </div>
                </div>

                <div class="button-container mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-2 mb-4 me-sm-3 fw-bold">Submit</button>
                </div>

            </form>
        </div>
    </section>
</div>

<script src="/js/signup.js"></script>