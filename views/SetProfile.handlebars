
    <div class="container">
        <section class="wrapUp-section">
            <img class="d-block mx-auto mt-4 mb-4" src="/images/wizard1.png" alt="logo" width="80" height="auto">
            <h4 class="text-center mt-4">Wrap Up</h4>
            <div class="center-form mx-auto text-center">
                <form class="wrapUp-form" method="POST">

                    <div class="form-group">
                        <label for="firstName" class="form-label mt-4">First name:</label>
                        <input type="text" id="firstName" name="firstName" class="form-control narrow-input"
                               required>
                    </div>

                    <div class="form-group">
                        <label for="lastName" class="form-label mt-4">Last name:</label>
                        <input type="text" id="lastName" name="lastName" class="form-control narrow-input" required>
                    </div>

                    <div class="form-group">
                        <label for="birthdate" class="form-label mt-4">Birthdate:</label>
                        <input type="date" id="birthdate" name="birthdate" class="form-control narrow-input"
                                required>
                    </div>

                    <div class="form-group">
                        <label for="gender" class="form-label mt-4">Biological gender:</label>
                        <select id="gender" name="gender" class="form-select narrow-input" required>
                            <option value="" disabled selected>Choose...</option>
                            <option value="MALE">Male</option>
                            <option value="FEMALE">Female</option>
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <label for="weight">Weight (kg):</label>
                        <input type="number" id="weight" name="weight" placeholder="Enter weight in kg" class="form-control narrow-input" min="1" max="300"
                               required>
                    </div>

                    <div class="form-group mt-4">
                        <label for="height">Height (cm):</label>
                        <input type="number" id="height" name="height" placeholder="Enter height in cm" class="form-control narrow-input" min="1" max="250"
                               required>
                    </div>

                    <div class="form-group mt-4">
                        <label for="weightGoal">Weight goal (kg):</label>
                        <input type="number" id="weightGoal" name="weightGoal" placeholder="Enter weight goal in kg" class="form-control narrow-input" min="1"
                               max="300" required>
                    </div>

                    <div class="form-group mt-4">
                        <label for="activityLevel">Activity level:</label>
                        <select id="activityLevel" name="activityLevel" class="form-control narrow-input" required>
                            <option value="" disabled selected>Choose...</option>
                            <option value="MOSTLY_SEDENTARY">Mostly sedentary (Little or no exercise)</option>
                            <option value="SOMEWHAT_SEDENTARY">Somewhat sedentary (Light exercise or sports 1-3 days a
                                week)
                            </option>
                            <option value="SOMEWHAT_ACTIVE">Somewhat active (Moderate exercise or sports 3-5 days a week)
                            </option>
                            <option value="MODERATELY_ACTIVE">Moderately active (Hard exercise or sports 6-7 days a week)
                            </option>
                            <option value="VERY_ACTIVE">Very active (Very hard exercise and physical job)</option>
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <label for="typeOfDiet">Type of diet:</label>
                        <select id="typeOfDiet" name="typeOfDiet" class="form-control narrow-input" required>
                            <option value="" disabled selected>Choose...</option>
                            <option value="LOW_CARB">Low-carb</option>
                            <option value="MEDITERRANEAN">Mediterranean</option>
                            <option value="BETTER_BODY">Better body</option>
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <label for="allergies">Ingredients You're Allergic To:</label>
                        <textarea id="allergies" name="allergies" class="form-control" rows="4"></textarea>
                    </div>


                    <div class="button-container mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-2 mb-4 me-sm-3 fw-bold">Submit</button>
                    </div>

                </form>
            </div>
        </section>
    </div>
    <script src="/js/wrapUp.js"></script>

<script src="/js/logout.js"></script>