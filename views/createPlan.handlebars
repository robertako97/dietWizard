<div class="container mt-5">
    <h2 class="text-center">Create Your Diet Plan</h2>

    <form action="/api/plans" method="POST" class="mt-4 createPlan-form">

        <!-- Diet Type -->
        <div class="form-group">
            <label for="dietType">Diet Type:</label>
            <select id="dietType" name="diet_type" class="form-control" required>
                <option value="" disabled selected>Select a diet type</option>
                <option value="LOW_CARB">Low Carb</option>
                <option value="MEDITERRANEAN">Mediterranean</option>
                <option value="BETTER_BODY">Better Body</option>
            </select>
        </div>

        <!-- Weight Goal -->
        <div class="form-group">
            <label for="weightGoal">Weight Goal (kg):</label>
            <input type="number" id="weightGoal" name="weight_goal" class="form-control" placeholder="Enter weight goal in kg" required>
        </div>

        <!-- Diet Duration -->
        <div class="form-group">
            <label for="dietDuration">Diet Duration (days):</label>
            <input type="number" id="dietDuration" name="diet_duration" class="form-control" placeholder="Enter duration in days" required>
        </div>

        <!-- Individual ID (hidden, you would fill this programmatically) -->
        <input type="hidden" name="individual_id" value="{{this.individual.individual_id}}">

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Create Plan</button>
        </div>

    </form>
</div>

<script src="/js/createPlan.js"></script>
